<Window
    x:Class="StatementApp.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StatementApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginWindow"
    Width="1080"
    Height="720"
    mc:Ignorable="d">
    <Grid>
        <TextBox
            x:Name="tbLogin"
            Width="197"
            Height="66"
            Margin="0,195,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            MaxLength="50"
            Text=""
            TextWrapping="Wrap" />

        <TextBox
            x:Name="tbPassword"
            Width="196"
            Height="66"
            Margin="0,286,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            MaxLength="20"
            Text=""
            TextWrapping="Wrap" />

        <Button
            x:Name="btnLogin"
            Width="80"
            Height="41"
            Margin="0,379,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Click="BtnLogin_Click"
            Content="Войти"
            RenderTransformOrigin="0.5,0.5" />
    </Grid>
</Window>
